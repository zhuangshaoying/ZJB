@{
    Layout = null;
    var data = new RouteValueDictionary(this.Model);
    var height = data["navHeight"]?? data["height"] ?? "39px";
    var curEsfNav = data["curNav"] ?? "home";
}
@{ 
    <style type="text/css">
        .nav-bar {
            z-index: 25;
            text-align: center;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 48px;
            background: #fff;
            border-top: 1px solid #ddd;
        }
        .nav-bar a:active, .nav-bar a:hover, .nav-bar a:link, .nav-bar a:visited {
            position: relative;
            font-size: 12px;
            padding-top: 30px;
            width: 32%;
            color: #666;
            display: inline-block;
        }
        .nav-bar .iconfont {
            position: absolute;
            display: block;
            font-size: 20px;
            color: #666;
            left: 0;
            top: 5px;
            right: 0;
            bottom: 0;
            margin: 0;
        }
    </style>
}
<div style="height:@height;"></div>
<nav class="nav-bar"> 
    <a class='@(curEsfNav == "home" ? "active" : "")' href="@Url.Action("Index","esf")">首页<b class="iconfont">&#xd608;</b></a>
    <a class='@(curEsfNav == "add" ? "active" : "")' href="@Url.Action("Delegate","esf")">发布房源<b class="iconfont">혇</b></a>
    <a class='@(curEsfNav == "my" ? "active" : "")' href="@Url.Action("Me","esf")">我的<b class="iconfont">혂</b></a>
</nav>


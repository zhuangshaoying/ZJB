@using ZJB.Api.Entity;
@model List<PublicUser>
@{
    string top1Img = "/images/first.png";
    string top2Img = "/images/second.png";
    string top3Img = "/images/third.png";
    var TopIndex = 1;
    Layout = null;
    }
@foreach (PublicUser item in Model)
{
    string touxiang = "";
    if (item.Portrait == "")
    {
        touxiang = "/images/txDefault.png";
    }
    else
    {
        touxiang = item.Portrait;
    }
    <div class="paihang_item clearfix">
     @if (TopIndex == 1)
    {
        <span class="pm_icon"><img src="@top1Img" /></span>
    }
    else if (TopIndex == 2)
    {
       <span class="pm_icon"><img src="@top2Img" /></span>
    }
    else if (TopIndex == 3)
    {
        <span class="pm_icon"><img src="@top3Img" /></span>
    }
    else {
        <span class="pm_txt">@TopIndex</span>;
    }
    <span class="touxiang"><img src="@(touxiang)?imageMogr2/strip|imageView2/1/w/50/h/50/q/85" /><span class="mynames">@item.Name</span></span>
    <span class="jf_num">@item.Points</span>
    </div>
    TopIndex++;
}



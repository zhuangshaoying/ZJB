@using ZJB.Api.Entity;
@model VPublicUser
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <title>Editmobile</title>
	<link href="/css/common.css" rel="stylesheet" type="text/css">
	<link href="/css/main.css" rel="stylesheet" type="text/css">
	<link href="/css/user_info.css" rel="stylesheet" type="text/css">
</head>
<body>
<div id="saleHouse" class="saleHouse">
	<div class="saleHouse-main shejiao_main">
		<div class="main_hd">
		  <ul class="sale-tab-sub">
			<li class="sale-sub-menu selected"> <a href="javascript:">修改手机号码</a> </li>
		  </ul>
		</div>
	    <div class="user_xiangqing">
	        @{
	            if (!string.IsNullOrEmpty(Model.Tel))
	            {
                     <div class="userxq_item mb15 clearfix"><label>原手机号码：</label><span class="mytels">@Model.Tel</span></div>
	            }
	        }
	       
	        <div class="userxq_item mb15 clearfix">
	            <label>新手机号码：</label>
	            <input type="text" class="inputStyle" id="strMobile" name="MobilePhone" maxlength="11">
	            <span id="errorTel" class="errorInput"></span>
	        </div>
	        <div class="userxq_item mb15 clearfix">
	            <label>手机验证码：</label>
	            <input type="text" class="inputStyle width2" id="strVcode" name="vcode_phone" disabled="disabled">
	            <input type="button" value="获取短信验证码" class="yzmBtn" id="vcode" disabled="disabled">
	        </div>
	        <div class="userxq_item mb15 clearfix">
	            <label></label>
	            <input type="button" value="确认修改" class="btnStyle" id="mobile_submit">
	            <a href="/User/BrokerInfo" class="js_btn">取消</a>
	        </div>
	    </div>
    </div>
</div>
<script src="/Scripts/jquery-1.8.3.js" type="text/javascript"></script>
<script src='/Scripts/plugins/artDialog/jquery.artDialog.js?skin=chrome' type='text/javascript'></script>
<script src='/Scripts/plugins/artDialog/plugins/iframeTools.source.js' type='text/javascript'></script>
<script src="~/Scripts/BrokerInfo.js"></script>
<script src='/Scripts/common.js' type='text/javascript'></script>
</body></html>
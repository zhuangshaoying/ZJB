@using ZJB.Api.Entity;
@model VPublicUser
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BrokerHeadImg</title>
	<link href='/css/common.css' rel='stylesheet' type='text/css' />
	<link href='/css/main.css' rel='stylesheet' type='text/css' />
	<link href='/css/user_info.css' rel='stylesheet' type='text/css' />
</head>
<body>
<div id="saleHouse" class="saleHouse">
	<div class="saleHouse-main shejiao_main">
		<div class="main_hd">
		  <ul class="sale-tab-sub">
			<li class="sale-sub-menu selected"> <a href="javascript:">修改头像</a> </li>
		  </ul>
		</div>
		<div class="user_xiangqing">
			<div class="modify_content_hd">
                <p class="frm_tips">近期本人拍摄的1寸或2寸、正面、免冠、彩色证件照;</p>
                <p class="frm_tips">照片要求头像清晰、完整，不能含有以下内容（如锦旗、军装、其他网站Logo、PS信息）,新头像不允许涉及政治敏感与色情;</p>
                <p class="frm_tips">图片格式必须为：bmp, jpeg, jpg, gif;不可大于1M</p>
        	</div>
			<div class="userxq_item">
				<a href="javascript:;" class="filebtn btn_upload" id="UploadBtn">上传图片</a>
			</div>
			<div class="img_yulan clearfix">
				<div id="largeHeadImg" class="crop_placeholder">
                    <img id="LeftHeadImg" src="@Model.Portrait?imageMogr2/strip|imageView2/1/w/200/h/200/q/85"  title="头像" onerror="this.src='/images/txDefault.png'"/>
				</div>
				<div class="avatar_preview_area">
					<p class="preview_tips">头像预览</p>
					<div class="inner_avatar_preview">
						<div id="squareHeadImg" class="preview_item square">
							<span class="marked_text">方形头像</span>
							<img class="square_img" id="square_uploadFileSrc" src="@Model.Portrait?imageMogr2/strip|imageView2/1/w/140/h/140/q/85" onerror="this.src='/images/spacer218877.gif'">
						</div>
						<div id="circleHeadImg" class="preview_item circle">
							<span class="marked_text">圆形头像</span>
							<img class="round_white_img" src="/images/cut-round-white22f1a8.png">
							<img class="circle_img" id="round_uploadFileSrc" src="@Model.Portrait?imageMogr2/strip|imageView2/1/w/140/h/140/q/85"  onerror="this.src='/images/spacer218877.gif'">
						</div>
					</div>
            	</div>
			</div>
			<div class="file_sc mb15 clearfix">
				<input type="button" value="确认修改" class="btnStyle mydsf" id="img_submit">
				<a href="@Url.Action("BrokerInfo", "User")" class="js_btn mydsf">取消</a>
			</div>
    	</div>
	</div>
</div>
      <div style="display: none; background: none;">
        <iframe id="imgupload" src="@Url.Action("Index","ImageUpload")" frameborder="0" scrolling="no" height="0" width="0"></iframe>
    </div>
</body>
<script src='/Scripts/jquery-1.8.3.js' type='text/javascript'></script>
<script src='/Scripts/plugins/artDialog/jquery.artDialog.js?skin=chrome' type='text/javascript'></script>
<script src='/Scripts/plugins/artDialog/plugins/iframeTools.source.js' type='text/javascript'></script>
<script src="~/Scripts/FuncTool.js"></script>
<script src="~/Scripts/BrokerInfo.js?v=1.0"></script>
<script src='/Scripts/common.js' type='text/javascript'></script>
</html>

@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>用户登录--住家帮</title>
<link href='/css/common.css' rel='stylesheet' type='text/css' />
<link href='/css/login.css' rel='stylesheet' type='text/css' />
    <script type="text/javascript">
        if (top.location != self.location) {
            top.location = self.location;
        }
    </script>
</head>
<body>
<input id="contextPath" value='' type="hidden"/>
<div id="login-background">
  <div id="login-main">
    <div id="login-content">
	<div class="user-loginback">
		<a href="/" class="login_logo" title="返回住家帮首页"></a>
	</div>
      <div id="login-center">
	  	<div class="login_title clearfix"><div class="logon_txt">用户登录</div><span class="fr">还没有住家帮账号？<a href="/user/Register">马上注册</a></span></div>
        <ul class="font-16 form_body">
          <li>
              <input type="text" name=phone id="phone" placeholder="请输入用户名或手机号" />
          </li>
            <li>
                <input type="password" name="userPwd" id="userPwd"  placeholder="请输入登录密码" />
            </li>
			</ul>
            <div class="wangji"><a href="/user/forgot" class="foget_psw">找回密码？</a></div>
          <div class="tijiao_rz">
            <button id="login_btn" class="login-center">登 录</button>
              @*<a href="@Url.Action("Register")" class="rg">前往注册</a>
              <a href="/user/Register" class="rg">前往注册</a>*@
          </div>
          <input type="hidden" id="path" value=""/>
          <input type="hidden" id="xid" value="@ViewBag.UserId" />
      </div>
      <div id="login-footer">
        <p>版权所有：住家帮</p>
      </div>
      
      <!-- IE7提示 -->
      <div class="navigator" style="display:none">
        <h5>温馨提示</h5>
        <ul class="navigator-content">
          <li>亲爱的用户您好：</li>
          <li class="navigator-margin">由于您的浏览器版本偏低,导致房产盒子系统页面展现异常,建议您更新浏览器版本。</li>
          <li>房产盒子系统在谷歌、火狐、及IE8以上的浏览器展现效果比较良好，建议使用相应的浏览器，谢谢合作！</li>
        </ul>
      </div>
    </div>
  </div>
</div>
<script src='/Scripts/jquery-1.8.3.js' type='text/javascript'></script> 
<script src='/Scripts/constants.js' type='text/javascript'></script> 
<script src='/Scripts/login.js?v=210' type='text/javascript'></script>
</body>
</html>

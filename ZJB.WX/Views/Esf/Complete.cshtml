@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width" />
    <title>发布成功-住家帮</title>
    <link rel="stylesheet" href="/css/esf/common.css">
    <link rel="stylesheet" href="/css/esf/submit.css">
    <script type="text/javascript" src="/Scripts/Esf/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" src="/Scripts/Esf/base.js"></script>
</head>

<body>
    <div class="sub-complete-panel active">
        <div class="sub-info-panel">
            <em style="margin: 0;" class="iconfont">혎</em>
            <p class="sub-complete-w1">提交成功</p>
            @if (ViewBag.Type == 1)
            {
                <p class="sub-complete-w2">客服会尽快联系您核实房屋信息</p>
            }
        
            <p class="sub-complete-w2">
                <img style="width: 136px;" src="~/Images/esf/qrcode.jpg" />
            </p>
            <p class="sub-complete-w2">长按关注公众号</p>
            <p class="sub-complete-w2">
                看房通知等将收到微信消息提醒哦~
            </p>
            @if (ViewBag.Type == 1)
            {
                <p class="sub-complete-btn" onClick="window.location = '@Url.Action("DelegateMng")'">完成</p>
            }
            else if (ViewBag.Type == 2)
            {
                <p class="sub-complete-btn" onClick="window.location = '/esf/esfDetail?houseid=@ViewBag.Hid'">完成</p>
            }

        </div>
        <p class="sub-complete-service">
            客服电话<a class="sub-complete-tel" href="tel:15060789923">139-0600-9568</a>
        </p>
    </div>
    @{ Html.RenderPartial("Cnzz"); }
</body>
</html>

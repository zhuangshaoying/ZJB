@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>住家帮管理后台</title>
    <link href='/Content/common.css' rel='stylesheet' type='text/css' />
    <link href='/Content/login.css' rel='stylesheet' type='text/css' />
</head>

<body>
    <input id="contextPath" value='' type="hidden" />
    <div id="login-background">
        <div id="login-main">
            <div id="login-content">
                <div id="login-center">
					<div class="glhead">
						<h3>登录管理后台</h3>
					</div>
                    <ul class="font-16 form_body">
                        <li>
                            <label for="phone">用户名</label>
                            <input type="text" name=phone id="phone" value="" />
                        </li>
                        <li>
                            <label for="userPwd">密<span style="margin-left:15px"></span>码</label>
                            <input type="password" name="userPwd" id="userPwd" value="" />
                        </li>
                        <li class=" clear">
                            <button id="login_btn" class="login-center">登 录</button>
                        </li>
                    </ul>
                    <input type="hidden" id="path" value="">
                    </input>
                </div>
                <div id="login-footer">
                    <p>版权所有：住家帮&nbsp;&nbsp;&nbsp;&nbsp;</p>
                </div>

                <!-- IE7提示 -->
                <div class="navigator" style="display:none">
                    <h5>温馨提示</h5>
                    <ul class="navigator-content">
                        <li>亲爱的用户您好：</li>
                        <li class="navigator-margin">由于您的浏览器版本偏低,导致房产盒子系统页面展现异常,建议您更新浏览器版本。</li>
                        <li>房产盒子系统在谷歌、火狐、及IE8以上的浏览器展现效果比较良好，建议使用相应的浏览器，谢谢合作！</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script src='/Scripts/jquery-1.8.3.js' type='text/javascript'></script>
    <script src='/Scripts/constants.js' type='text/javascript'></script>
    <script src='/Scripts/login.js' type='text/javascript'></script>
</body>
</html>
